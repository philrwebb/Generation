{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2018",
    "moduleResolution": "node",
    "outDir": ".",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "**/*.ts" // Adjust this pattern to match the location of your TypeScript files
  ],
  "exclude": [
    "node_modules", // Commonly excluded to avoid compiling external modules
    "dist", // Exclude compiled output directory if applicable
    "**/test.ts"
  ]
}


CREATE TABLE IF NOT EXISTS Person (
	id INTEGER PRIMARY KEY,
	active BOOLEAN,
	givenNames VARCHAR(100),
	lastName VARCHAR(100),
	dob DATE,
	GenderType_id INTEGER,
	FOREIGN KEY(GenderType_id) REFERENCES GENDERTYPE (id) ON DELETE RESTRICT ON UPDATE NO ACTION
);

CREATE TABLE IF NOT EXISTS Employee (
	id INTEGER PRIMARY KEY,
	active BOOL,
	givenNames VARCHAR(100),
	lastName VARCHAR(100),
	dob DATE,
	department VARCHAR(150)
);

CREATE TABLE IF NOT EXISTS Address (
	id INTEGER PRIMARY KEY,
	active BOOL,
	addressLine1 VARCHAR(100),
	addressLine2 VARCHAR(100),
	addressLine3 VARCHAR(100),
	suburb VARCHAR(100),
	postcode VARCHAR(10),
	state VARCHAR(10),
	Person_id INTEGER,
	AddressType_id INTEGER,
	FOREIGN KEY(Person_id) REFERENCES PERSON (id) ON DELETE RESTRICT ON UPDATE NO ACTION,
	FOREIGN KEY(AddressType_id) REFERENCES ADDRESSTYPE (id) ON DELETE RESTRICT ON UPDATE NO ACTION
);

CREATE TABLE IF NOT EXISTS Contact (
	id INTEGER PRIMARY KEY,
	active BOOL,
	details VARCHAR(150),
	Person_id INTEGER,
	FOREIGN KEY(Person_id) REFERENCES PERSON (id) ON DELETE RESTRICT ON UPDATE NO ACTION
);

CREATE TABLE IF NOT EXISTS GenderType (
	id INTEGER PRIMARY KEY,
	active BOOL,
	effFrom DATETIME,
	effTo DATETIME,
	typeShortDescription VARCHAR(50),
	typeLongDescription VARCHAR(150),
	code VARCHAR(10)
);

CREATE TABLE IF NOT EXISTS AddressType (
	id INTEGER PRIMARY KEY,
	active BOOL,
	effFrom DATETIME,
	effTo DATETIME,
	typeShortDescription VARCHAR(50),
	typeLongDescription VARCHAR(150),
	code VARCHAR(10)
);

CREATE TABLE IF NOT EXISTS ContactType (
	id INTEGER PRIMARY KEY,
	active BOOL,
	effFrom DATETIME,
	effTo DATETIME,
	typeShortDescription VARCHAR(50),
	typeLongDescription VARCHAR(150),
	code VARCHAR(10)
);
